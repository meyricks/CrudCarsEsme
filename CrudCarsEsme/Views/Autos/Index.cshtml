@model IEnumerable<CrudCarsEsme.Models.Auto>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Vehículos</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Autos" asp-action="Index">
    <p>
        Buscar: <input type="text" name="buscar" class="form-text"/>
        <input type="submit" value="Buscar" class="btn btn-sm btn-dark" />
    </p>

</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MiStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImgRuta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Anio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiStatus)
            </td>
            <td>
                <img src=@Html.DisplayFor(modelItem => item.ImgRuta) width="250" height="150">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Anio)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Idauto">Edit</a> |
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Idauto">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Idauto">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
